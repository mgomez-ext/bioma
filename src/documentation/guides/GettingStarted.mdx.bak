import { ButtonComponent } from '@bioma/design-system';

@Component({
  selector: 'app-example',
  standalone: true,
  imports: [ButtonComponent],
  template: `
    <div class="d-flex gap-3">
      <!-- Primary button -->
      <bio-button
        label="Primary"
        variant="primary"
        (click)="handlePrimary()">
      </bio-button>

      <!-- Secondary button -->
      <bio-button
        label="Secondary"
        variant="secondary"
        (click)="handleSecondary()">
      </bio-button>

      <!-- Disabled button -->
      <bio-button
        label="Disabled"
        variant="primary"
        [disabled]="true">
      </bio-button>
    </div>
  `
})
export class ExampleComponent {
  handlePrimary() {
    console.log('Primary clicked!');
  }

